<div class="card">
  <h3 class="card-header">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h3>
  <div class="card-body">
    <h5 class="card-title">
      <%= @friend.email %> |
      <%= @friend.phone %> |
      <%= @friend.twitter %> |
    </h5>
    <p class="card-text">
      <div class="d-flex justify-content-end">
        <div class="px-2">
          <%= link_to "Edit", edit_friend_path(@friend), class:'btn btn-outline-primary'  %>
        </div>
        <div class="px-2">
          <%= button_to "Delete", @friend, method: :delete, class:'btn btn-outline-danger'  %>
        </div>
      </div>
    </p>

  </div>
  <div class="card-footer">
    <%= link_to "Back to friends", friends_path, class:'btn btn-secondary'  %>
  </div>
</div>