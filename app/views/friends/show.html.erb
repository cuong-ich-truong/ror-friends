<div class="card">
  <h3 class="card-header">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h3>
  <div class="card-body">
    <h5 class="card-title">
      <%= @friend.email %> |
      <%= @friend.phone %> |
      <%= @friend.twitter %> |
    </h5>
    <p class="card-text"> 
      </br>
      <%= link_to "Edit this friend", edit_friend_path(@friend), class:'btn btn-secondary'  %>
      <%= link_to "Back to friends", friends_path, class:'btn btn-secondary'  %>
    </p>
    
  </div>
  <div class="card-footer">
    <%= button_to "Destroy this friend", @friend, method: :delete, class:'btn btn-warning'  %>
  </div>
</div>